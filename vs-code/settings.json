{
    // General //

    "extensions.showRecommendationsOnlyOnDemand": true,

    // Terminal

    "terminal.integrated.shell.osx": "/bin/zsh",
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.shell.windows": "powershell",

    // Editor
    "editor.minimap.enabled": false,
    "window.restoreWindows": "none",
    "workbench.startupEditor": "newUntitledFile",
    "editor.wordWrap": "on",
    "editor.acceptSuggestionOnEnter": "off",
    "workbench.editor.enablePreview": false,

    // Appearance

    "workbench.activityBar.visible": false,
    "editor.fontFamily": "Menlo for Powerline",
    "editor.fontSize": 14,
    "terminal.integrated.fontFamily": "Menlo",
    "terminal.integrated.fontSize": 14,

    // VIM //

    "vim.useCtrlKeys": false,
    "vim.useSystemClipboard": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "C-f": false
    },
    "vim.normalModeKeyBindings": [
        {
            "before": ["<leader>", "f", "s"],
            "commands": [ "workbench.action.files.save"]
        },
        {
            "before": ["<leader>", "f", "d"],
            "commands": [ "workbench.action.closeActiveEditor"]
        },
        {
            "before": ["<leader>", "w", "d"],
            "commands": [ "workbench.action.closeEditorsInGroup"]
        },
        {
            "before": ["<leader>", "w", "/"],
            "commands": [ "workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "w", "-"],
            "commands": [ "workbench.action.splitEditorRight"]
        },
        {

            "before": ["<leader>", "w", "j"],
            "commands": [ "workbench.action.navigateDown"]
        },

        {
            "before": ["<leader>", "w", "k"],
            "commands": [ "workbench.action.navigateUp"]
        },
        {
            "before": ["<leader>", "w", "l"],
            "commands": [ "workbench.action.navigateRight"]
        },
        {
            "before": ["<leader>", "w", "h"],
            "commands": [ "workbench.action.navigateLeft"]
        }
    ],

    // Rust //
    
    "rust-client.rustupPath": "$HOME/.cargo/bin/rustup",
    "debug.allowBreakpointsEverywhere": true,

    // Python //

    "python.defaultInterpreterPath": "python3",

    // Solidity //
    "solidity.compileUsingRemoteVersion": "v0.6.0+commit.26b70077",
    "workbench.colorTheme": "One Dark Pro"
}
