{
    // GENERAL //

    // Spammy bullshit
    "extensions.ignoreRecommendations": true,
    "security.workspace.trust.enabled": false,

    // EDITOR //

    "editor.fontFamily": "JetBrainsMono NFM Regular",
    "editor.fontSize": 15,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "never",
    "editor.rulers": [ 120 ],
    "editor.wordWrap": "off",

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.associations": {
        "*.in": "toml"
    },

    // WORKBENCH //

    "workbench.startupEditor": "none",
    "workbench.editorLargeFileConfirmation": 20,
    "workbench.sideBar.location": "left",
    "workbench.activityBar.location": "top",

    // THEME //

    "window.autoDetectColorScheme": true,

    // TERMINAL //

    "terminal.integrated.fontFamily": "JetBrainsMono NFM Regular",
    "terminal.integrated.fontSize": 15,

    // RUST //

    "rust-analyzer.trace.server": "verbose",
    "rust-analyzer.server.extraEnv": {
        "RA_LOG": "warn"
    },

    // GIT //

    "git.openRepositoryInParentFolders": "never",

    // VIM //

    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<leader>", "f", "s"],     "commands": [ "workbench.action.files.save" ] },
        { "before": ["<leader>", "f", "q"],     "commands": [ "workbench.action.closeActiveEditor" ] },
        { "before": ["<leader>", "p", "f"],     "commands": [ "workbench.action.quickOpen" ] },
        { "before": ["<leader>", "s", "s"],     "commands": [ "workbench.view.search" ] },
        { "before": ["<leader>", "<leader>"],   "commands": [ "workbench.action.showCommands" ] },
        { "before": ["<C-w>", "\\"],            "commands": [ "workbench.action.splitEditor" ] },
        { "before": ["<C-w>", "-"],             "commands": [ "workbench.action.splitEditorDown" ] },
        { "before": ["<C-b>" ],                 "commands": [ "workbench.action.toggleSidebarVisibility" ] },
    ],
    "vim.foldfix": true,

    // PYTHON //

    "[python]": {
        "editor.formatOnType": true
    },

    // RUBY //

    "sorbet.enabled": true,

    // JAVASCRIPT //

    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "diffEditor.maxComputationTime": 0,
    "workbench.preferredDarkColorTheme": "Catppuccin Macchiato"
}
